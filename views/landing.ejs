<body style="background-color: #57b846; margin: 0 auto; padding: 15%; font-family: 'Roboto', sans-serif;">
  <% if (error.length > 0) { %>
  <div class="text-dark" role="alert"><%= error %></div>
  <% } -%>
  <% if (success.length > 0) { %>
  <div class="alert alert-success" role="alert"><%= success %></div>
  <% } -%>
  <% if (info.length > 0) { %>
  <div class="alert alert-info" role="alert"><%= info %></div>
  <% } -%>
  <div class="row">
    <div class="col-md-6" style="padding-left: 20%; border-right: 1px solid #fff; border-right-color: rgb(255, 255, 255); border-right-style: solid; border-right-width: 1px;"><!-- columna izquierda -->
      <form action="/" method="POST" style="margin-right: 10%;">
<!--
        <div class="form-group">
          <input name="username" type="email" class="form-control" placeholder="Email Address"required autofocus>  <span><i class="fa fa-user"></i></span>
        </div>

